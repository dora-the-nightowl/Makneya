<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Bujangname"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/tmoneyregular"
                    android:gravity="center"
                    android:background="#FFDB0F"
                    android:text="이름" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bujangbutton"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="#FFDB0F">

            <TextView
                android:id="@+id/GA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/tmoneyregular"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:padding="13dp"
                android:text="가. 술마신 정도"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="#FFDB0F">

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="50"
                android:scrollbarStyle="outsideInset"
                android:thumb="?android:attr/textSelectHandle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/border" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="#FFDB0F">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/tmoneyregular"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:padding="13dp"
                android:text="나. 부장님 기분"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="#FFDB0F">

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="50"
                android:scrollbarStyle="outsideInset"
                android:thumb="@android:drawable/btn_star_big_on"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/border"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="#FFDB0F">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/tmoneyregular"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:padding="13dp"
                android:text="다. 날씨"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="#FFDB0F"
            >
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="#FFDB0F">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/tmoneyregular"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:padding="13dp"
                android:text="라. 먹었던 메뉴"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="#FFDB0F">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFDB0F"
            android:gravity="right"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/btnApproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결재받기"
                android:fontFamily="@font/tmoneyregular"
                android:textStyle="bold"
                android:includeFontPadding="false"
                app:backgroundTint="#000000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>